<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/currentRaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/currentTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1B1B1B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="현재 레이드"
                    android:textColor="#D8B38E"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/raidButton"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_button"
                    android:text="생성"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/notFound"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="없음"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentTab" />

            <LinearLayout
                android:id="@+id/raidInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/notFound">

                <LinearLayout
                    android:id="@+id/briefInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/infoCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:background="@drawable/bg_info_card"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:src="@drawable/icon_raid" />

                            <TextView
                                android:id="@+id/raidName"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:text="길드레이드 이름"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_time"
                                tools:ignore="VectorDrawableCompat" />

                            <TextView
                                android:id="@+id/raidTerm"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:text="기간"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/currentArrow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/info_card_out"
                        app:srcCompat="@drawable/icon_arrow_up"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bossInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Boss1Info"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#857D66">

                        <TextView
                            android:id="@+id/boss1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:hint="이름"
                            android:maxEms="5"
                            android:singleLine="false"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/progressBar1"
                            app:layout_constraintStart_toEndOf="@+id/element1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="80dp"
                            android:max="20"
                            android:min="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hardness1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="배율: 1.0"
                            app:layout_constraintBottom_toTopOf="@+id/progressBar1"
                            app:layout_constraintEnd_toEndOf="@+id/progressBar1"
                            app:layout_constraintStart_toStartOf="@+id/progressBar1" />

                        <ImageView
                            android:id="@+id/boss1Image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/boss_1" />

                        <ImageView
                            android:id="@+id/editButton1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/icon_create"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/element1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/boss1Image"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@drawable/element_fire" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Boss2Info"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#40311E">

                        <TextView
                            android:id="@+id/boss2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:hint="이름"
                            android:maxEms="5"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/progressBar2"
                            app:layout_constraintStart_toEndOf="@+id/element2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="80dp"
                            android:max="20"
                            android:min="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hardness2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="배율: 1.0"
                            android:textColor="#FFFFFF"
                            app:layout_constraintBottom_toTopOf="@+id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@+id/progressBar2"
                            app:layout_constraintStart_toStartOf="@+id/progressBar2" />

                        <ImageView
                            android:id="@+id/boss2Image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/boss_2" />

                        <ImageView
                            android:id="@+id/editButton2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/icon_create"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/element2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/boss2Image"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/element_earth" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Boss3Info"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#857D66"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/boss3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:hint="이름"
                            android:maxEms="5"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/progressBar3"
                            app:layout_constraintStart_toEndOf="@+id/element3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/progressBar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="80dp"
                            android:max="20"
                            android:min="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hardness3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="배율: 1.0"
                            app:layout_constraintBottom_toTopOf="@+id/progressBar3"
                            app:layout_constraintEnd_toEndOf="@+id/progressBar3"
                            app:layout_constraintStart_toStartOf="@+id/progressBar3" />

                        <ImageView
                            android:id="@+id/boss3Image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/boss_3" />

                        <ImageView
                            android:id="@+id/editButton3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/icon_create"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/element3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/boss3Image"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/element_light" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Boss4Info"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#40311E">

                        <TextView
                            android:id="@+id/boss4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:hint="이름"
                            android:maxEms="5"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/progressBar4"
                            app:layout_constraintStart_toEndOf="@+id/element4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/progressBar4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="80dp"
                            android:max="20"
                            android:min="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hardness4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="배율: 1.0"
                            android:textColor="#FFFFFF"
                            app:layout_constraintBottom_toTopOf="@+id/progressBar4"
                            app:layout_constraintEnd_toEndOf="@+id/progressBar4"
                            app:layout_constraintStart_toStartOf="@+id/progressBar4" />

                        <ImageView
                            android:id="@+id/boss4Image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/boss_4" />

                        <ImageView
                            android:id="@+id/editButton4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/icon_create"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/element4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/boss4Image"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/element_water" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/pastRaid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pastTab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1B1B1B">

                <TextView
                    android:id="@+id/pastTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="과거 레이드"
                    android:textColor="#D8B38E"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/tabArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/icon_arrow_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#FFFFFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/raidRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:visibility="gone"
                tools:listitem="@layout/card_raid">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>