<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_record_card"
    android:padding="5dp">

    <ImageView
        android:id="@+id/leaderImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@color/info_card_out"
        android:padding="3dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom|left"
        android:inputType="number"
        android:text="16,000,000"
        android:textColor="#262649"
        android:textSize="28sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textDamage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:text="데미지"
        android:textColor="#FFFFFF"
        card_view:layout_constraintBottom_toBottomOf="@+id/damage"
        card_view:layout_constraintStart_toEndOf="@+id/damage" />

    <TextView
        android:id="@+id/bossName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:text="광분한 미노타우로스"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bossImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#54748E"
        android:padding="3dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/lastHit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_clear"
        card_view:layout_constraintBottom_toBottomOf="@+id/bossImage"
        card_view:layout_constraintEnd_toEndOf="@+id/bossImage"
        card_view:layout_constraintStart_toStartOf="@+id/bossImage"
        card_view:layout_constraintTop_toTopOf="@+id/bossImage" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:gravity="right"
        android:text="Lv.60"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="@+id/bossName"
        card_view:layout_constraintEnd_toStartOf="@+id/bossName" />

