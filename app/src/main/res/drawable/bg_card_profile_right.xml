<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <size android:height="100dp" />
            <corners android:topRightRadius="50dp"
                android:bottomRightRadius="50dp"/>
            <solid android:color="@color/bg_icon"/>
        </shape>
    </item>
    <item
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <size android:height="94dp"  />
            <corners android:topRightRadius="47dp"
                android:bottomRightRadius="47dp"/>
            <solid android:color="@color/bg_text"/>
        </shape>
    </item>
    <item
        android:right="8dp"
        android:left="5dp">
        <shape
            android:shape="line">
            <stroke
                android:width="1dp"
                android:color="@color/bg_icon" />
        </shape>
    </item>
</layer-list>
